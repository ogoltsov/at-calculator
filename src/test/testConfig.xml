<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="calculatorTetSuite">
    <test name="additionNumbersTest" parallel="true" thread-count="2">
        <groups>
            <define name="allAdditionOperations">
                <include name="additionOperation"/>
            </define>
            <run>
                <include name="allAdditionOperations"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.calculator.operation.addition.CalculatorAdditionalIntTest"/>
            <class name="com.epam.calculator.operation.addition.CalculatorAdditionalDoubleTest"/>
        </classes>
    </test>

    <test name="divideNumbersTest" parallel="true" thread-count="2" >
        <groups>
            <define name="allDivideOperations">
                <include name="divideOperation"/>
            </define>
            <run>
                <include name="allDivideOperations"/>
            </run>
            <dependencies>
                <group name="allDivideOperations" depends-on="allAdditionOperations"/>
            </dependencies>
        </groups>
    </test>
</suite>